                            <div class="flex justify-between items-center">
                                <span class="text-2xl font-bold text-green-600">‚Çπ899</span>
                                <div class="flex space-x-2">
                                    <button onclick="editProduct('cricket-gloves')"
                                        class="px-3 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm">
                                        Edit
                                    </button>
                                    <button onclick="deleteProduct('cricket-gloves')"
                                        class="px-3 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Added Products Carousel (if any) -->
            <div id="added-football-carousel" class="mb-8 hidden">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-xl font-bold text-gray-900">Recently Added Products</h3>
                    <div class="flex space-x-2">
                        <button onclick="scrollCarousel('added-football-products', -1)" class="p-2 bg-gray-200 rounded-full hover:bg-gray-300">
                            ‚Üê
                        </button>
                        <button onclick="scrollCarousel('added-football-products', 1)" class="p-2 bg-gray-200 rounded-full hover:bg-gray-300">
                            ‚Üí
                        </button>
                    </div>
                </div>
                <div class="overflow-x-auto">
                    <div id="added-football-products" class="flex space-x-6 pb-4" style="scroll-behavior: smooth;">
                        <!-- Added football products will appear here -->
                    </div>
                </div>
            </div>

            <!-- Football Products -->
            <div id="football-products" class="hidden transition-all duration-300">
                <!-- Initial grid for up to 3 products -->
                <div id="football-grid" class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <!-- Football Boots -->
                    <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow border">
                        <img src="https://cdn.lovellsports.com/features/splash-pages/soccer/boots/nike-mar25.jpg?width=540"
                            alt="Football Boots" class="w-full h-48 object-cover rounded-t-lg">
                        <div class="p-6">
                            <h3 class="text-lg font-semibold mb-2">Professional Football Boots</h3>
                            <p class="text-gray-600 mb-4">High-performance boots for all surfaces</p>
                            <div class="flex justify-between items-center">
                                <span class="text-2xl font-bold text-green-600">‚Çπ3,499</span>
                                <div class="flex space-x-2">
                                    <button onclick="editProduct('football-boots')"
                                        class="px-3 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm">
                                        Edit
                                    </button>
                                    <button onclick="deleteProduct('football-boots')"
                                        class="px-3 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Football -->
                    <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow border">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT436RR-MYgQl9xVFBmGpFMxwG9Vekbi7ny7w&s"
                            alt="Football" class="w-full h-48 object-cover rounded-t-lg">
                        <div class="p-6">
                            <h3 class="text-lg font-semibold mb-2">Professional Football</h3>
                            <p class="text-gray-600 mb-4">FIFA approved match football</p>
                            <div class="flex justify-between items-center">
                                <span class="text-2xl font-bold text-green-600">‚Çπ1,999</span>
